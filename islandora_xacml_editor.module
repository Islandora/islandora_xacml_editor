        }
        elseif ($type == 'mime type regex') {
          $form_state['islandora_xacml']['remove_mime_regex'][] = $filter;
        }
        elseif ($type == 'dsid regex') {
          $form_state['islandora_xacml']['remove_dsid_regex'][] = $filter;
